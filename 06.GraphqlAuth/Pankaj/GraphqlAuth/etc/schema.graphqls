type Query {
    """
    Fetch product details by SKU.
    Accessible only to authenticated customers.
    """
    authProductBySku(
        """
        Product SKU
        """
        sku: String!
    ): AuthProductData
        @resolver(class: "Pankaj\\GraphqlAuth\\Model\\Resolver\\AuthProductBySku")
        @auth
}

"""
Product data returned for authenticated users
"""
type AuthProductData {
    id: Int
    sku: String
    name: String
    price: Float
    description: String
}
